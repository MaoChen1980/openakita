{
    "name": "web_search",
    "description": "Search the web using DuckDuckGo. Returns webpage results with title, URL and snippet. Use for general information queries.",
    "inputSchema": {
        "type": "object",
        "properties": {
            "query": {
                "type": "string",
                "description": "Search query string"
            },
            "max_results": {
                "type": "integer",
                "description": "Maximum number of results (default: 5, max: 20)",
                "default": 5
            },
            "region": {
                "type": "string",
                "description": "Region code (wt-wt: worldwide, cn-zh: China, us-en: US)",
                "default": "wt-wt"
            },
            "safesearch": {
                "type": "string",
                "description": "Safe search level (on, moderate, off)",
                "default": "moderate",
                "enum": ["on", "moderate", "off"]
            }
        },
        "required": ["query"]
    }
}
